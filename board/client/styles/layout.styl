body, h1, h2, h3, h4
  font-family: 'Source Sans Pro', 'Helvetica Neue'

.handwritten
  font-family: 'Gloria Hallelujah','Lato'

.l-container, .l-body
  display: flex
  flex-direction: column

.l-header
  width: 100vw

.l-content
  flex: 1
  background-color: blue

.l-sidebar
  flex: 0 0 20em
  display: none
  background-color: green

//.l-sidebar-shown
//.l-sidebar-control

.l-body
  width: 100vw


@media (min-width: 768px)
  .l-body
    flex-direction: row
    flex: 1

  .l-content
    flex: 1
    background-color: yellow

  .l-sidebar
    flex: 0 0 20em
    display: block
    background-color: orange

  .l-sidebar-control
    display: none
