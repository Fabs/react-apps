@import './colors.import'

.score
  .title
    color: brand-color
    margin: 20px

  //TODO: responsive table
  ul
    width: 100%
    margin: 0
    padding: 0

    li
      display: flex
      flex-flow: row wrap
      align-items: center

      background-color: content-player
      margin: 15px 0
      width: 100%

    div.player
      flex: 1

      img.avatar
        width: 65px
        float: left
        margin: 10px

      span.name
        float:left
        margin-top: 35px

    div.score
      flex: 0 1 5em

      display: inline-block
      text-align: center

      span.value
        font-size: 25px

      span.symbol
        padding-right: 5px
        font-size: 15px
